@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>事迹博客后台管理系统</title>
    <link href="~/Content/css/adminIndex.css" rel="stylesheet" />
    <link href="~/Content/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/Content/themes/icon.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.easyui.min.js"></script>
    <script src="~/Scripts/easyui-lang-zh_CN.js"></script>
</head>
<body>


    <div id="ca" class="easyui-layout" fit="true">
        <div data-options="region:'north',split:false" style="height: 100px;">
            <div id="tops">
                <p>因有事迹&nbsp;才会浪漫...</p>
                <a href="/adminlogin/index" title="安全退出后台管理系统">注销</a>
            </div>
        </div>
        <div data-options="region:'south',split:false" style="height: 40px;">
            <div id="bottoms">
                <h4>Copyright (c) StoryBlog . All Rights Reserved .</h4>
            </div>
        </div>
        <div data-options="region:'west',title:'管理员：@Session["adAccount"] ，您好！',split:false" style="width: 200px;">
            <p class="info">
                <a href="javascript:AddTabs('用户管理','/admin/UserManage')">
                    <img src="~/Images/icon/account.png" />用户管理</a>
            </p>
            <p class="info">
                <a href="javascript:AddTabs('文章管理','/admin/ArticleManage')">
                    <img src="~/Images/icon/form.png" />文章管理</a>
            </p>
            <p class="info">
                <a href="javascript:AddTabs('照片管理','/admin/PictureManage')">
                    <img src="~/Images/icon/pic.png" />照片管理</a>
            </p>
            <p class="info">
                <a href="javascript:AddTabs('广告管理','/admin/ADClunmsManage')">
                    <img src="~/Images/icon/相册.png" />广告管理</a>
            </p>
            <p class="info">
                <a href="javascript:AddTabs('账号设置','/admin/Setting')">
                    <img src="~/Images/icon/管理员.png" />账号设置</a>
            </p>
        </div>
        <div data-options="region:'center'">
            <div id="tta" class="easyui-tabs" fit="true">
            </div>
        </div>
    </div>

    <script type="text/javascript">

        //加载时调用函数
        //$(function () {
        //    AddTabs('首页信息', '/admin/indexInfo');
        //});

        function AddTabs(title, url) {

            if (!$('#tta').tabs('exists', title)) {
                $('#tta').tabs('add', {
                    title: title,
                    selected: true,
                    closable: true,
                    href: url,
                });
            } else {
                !$('#tta').tabs('select', title)
            }

        }

    </script>

</body>
</html>
