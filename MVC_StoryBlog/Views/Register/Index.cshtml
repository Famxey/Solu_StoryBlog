@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>注册——因有事迹，才会浪漫！</title>
    @Styles.Render("~/Content/css/LoginStyle.css")
    @Styles.Render("~/Content/css/RegisterStyle.css")
    @Styles.Render("~/Content/css/zcstyle.css")
    <script src="~/Scripts/js/zcvendors.js"></script>
    <script src="~/Scripts/js/zcindex.js"></script>
    <script src="~/Scripts/jquery-1.12.2.min.js"></script>
    <script src="~/Scripts/js/jquery-1.7.2.min.js"></script>
    <style type="text/css">
        .spa {
            float: left;
            margin-left: 43%;
        }
    </style>
</head>
<body>
    <video id="video1" autoplay="autoplay" muted="muted" loop="loop">
        <source src="~/Video/video2.mp4" />
    </video>
    <div id="content">
        @* 页眉*@
        <div id="c_top">
            <div id="t_con">
                <ul>
                    <li><a href="/home">首页</a></li>
                    <li><a href="/storyClunms/Index">故事栏</a></li>
                    <li><a href="/picturewall/Index">照片墙</a></li>
                    <li><a href="/home/Contact">联系我们</a></li>
                </ul>
            </div>
        </div>
        @*登录框*@
        <div id="c_midlle">
            <div id="cmfont">
                <p class="p_font">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;因</p>
                <p class="p_font">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;有</p>
                <p class="p_font">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;事迹</p>
                <p class="p_font">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</p>
                <p class="p_font">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;才</p>
                <p class="p_font">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;会</p>
                <p class="p_font">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;浪</p>
                <p class="p_font">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;漫</p>
            </div>
            <div id="registerbox">
                <div class="btns_wp scale_box">
                    @using (Html.BeginForm())
                    {
                        <input class="luosrk" required='' id="NickName" name="NickName" type="text" oninput="setCustomValidity('')" oninvalid="setCustomValidity('昵称不能为空')" placeholder="昵称" />
                        <span class="spa spa1"></span>
                        <input class="luosrk" required='' id="Account" name="Account" type="text" oninput="setCustomValidity('')" oninvalid="setCustomValidity('账号不能为空')" placeholder="账号" />
                        <span class="spa spa2"></span>
                        <input class="luosrk" required='' id="PassWord" name="PassWord" type="password" oninput="setCustomValidity('')" oninvalid="setCustomValidity('密码不能为空')" placeholder="密码" />
                        <span class="spa spa3"></span>
                        <input class="luosrk" required='' id="PassWord1" name="PassWord1" type="password" oninput="setCustomValidity('')" oninvalid="setCustomValidity('确认密码不能为空')" placeholder="确认密码" />
                        <span class="spa spa4"></span>
                        <div id="luoyz">
                            <input id="luoyzm" required='' name="name" type="text" oninput="setCustomValidity('')" oninvalid="setCustomValidity('验证码')" placeholder="验证码" />
                            <span class="spa spa5"></span>
                            <img src="/securitycode/index" id="immg" onclick="document.getElementById('immg').src='/securitycode/index?temp='+ (new Date().getTime().toString(36)); return false" style="cursor: pointer;" />
                            <a href="#" onclick="document.getElementById('immg').src='/securitycode/index?temp='+ (new Date().getTime().toString(36)); return false">看不清</a>
                        </div>
                        <div id="luoxy">
                            <input type="checkbox" id="ck" checked="checked" />
                            <a href="#">《用户注册协议》</a><br />
                            &nbsp;&nbsp;<a href="#">《隐私政策》</a>
                        </div>
                        <input type="submit" class="btn_download JS-btn-download" value="立即注册" />
                   
                    }
                </div>
            </div>
        </div>
    </div>
    @* 防止div塌陷*@
    <div style="text-align: center; clear: both;">
    @* 页脚*@
    <div id="c_bottom" style="height: 30px;">
        <h5 style="color: white;">Copyright (c) StoryBlog . All Rights Reserved .</h5>
    </div></div>


    <script type="text/javascript">
        window.onload = function () {
            $("#NickName").focus()
        }
        /************************  失焦判断  **********************************/
        $("input").blur(function () {
            $(".spa").css("color", "#BD362F")
            if ($(this).is("#NickName")) {             //昵称判断
                var na = /^[\u4E00-\u9FA5A-Za-z0-9]{2,8}$/
                if ($("#NickName").val() != "") {
                    if (!(na.test($("#NickName").val()))) {
                        $(".spa1").text("格式错误，仅支持中英文数字，字符数在2-8个字符");
                        $(this).css("border", "2px solid red")
                        return false;
                    } else if (na) {
                        $(".spa1").text("");
                        return true;
                    }
                } else {
                    $(".spa1").text("");
                }
            }


            if ($(this).is("#Account")) {            //账号号判断
                var ac = /^[a-zA-Z0-9_][a-zA-Z0-9_]{5,10}$/
                if ($("#Account").val() != "") {
                    if (!(ac.test($("#Account").val()))) {
                        $(".spa2").text("格式错误，支持中英文数字下划线，字符数在6-11个字符");
                        $(this).css("border", "2px solid red")
                        return false;
                    } else if (ac) {
                        $(".spa2").text("");
                        return true;
                    }
                } else {
                    $(".spa2").text("");
                }
            }


            if ($(this).is("#PassWord")) {            //密码判断
                var pwd = /^[a-zA-Z]\w{5,15}$/
                if ($("#PassWord").val() != "") {
                    if (!(pwd.test($("#PassWord").val()))) {
                        $(".spa3").text("格式错误,必须为字母开头，字符数在6-16个字符");
                        $(this).css("border", "2px solid red")
                        return false;
                    } else if (pwd) {
                        $(".spa3").text("");
                        return true;
                    }
                } else {
                    $(".spa3").text("");
                }
            }

            if ($(this).is("#PassWord1")) {            //密码判断
                var pwd1 = document.getElementById("PassWord").value;
                var pwd2 = document.getElementById("PassWord1").value;
                if (pwd1 == pwd2) {
                    $(".spa4").text("");
                    return true;
                }
                else {
                    $(".spa4").text("两次密码不一致！");
                    $(this).css("border", "2px solid red")
                    return false;
                }
            }



            if ($(this).is("#luoyzm")) {            //密码判断
                var yzm = Session["ValidateNum"].ToString();
                var yzm1 = document.getElementById("luoyzm").value;
                if (yzm == yzm1) {
                    $(".spa5").text("");
                    return true;
                }
                else {
                    $(".spa5").text("验证码错误请重新输入！");
                    $(this).css("border", "2px solid red")
                    return false;
                }
            }




        })
        /********************** 聚焦提示 ************************/
        $("input").focus(function () {
            if ($(this).is("#NickName")) {
                $(".spa1").text("支持中英文数字，字符数在2-8个字符").css("color", "orange")
                $(this).css("border", "2px solid #fff")
            }
            if ($(this).is("#Account")) {
                $(".spa2").text("支持中英文数字下划线，字符数在6-11个字符").css("color", "orange")
                $(this).css("border", "2px solid #fff")
            }
            if ($(this).is("#PassWord")) {
                $(".spa3").text("必须为字母开头，字符数在6-16个字符").css("color", "orange")
                $(this).css("border", "2px solid #fff")
            }
            if ($(this).is("#PassWord1")) {
                $(".spa4").text("请再次输入密码！").css("color", "orange")
                $(this).css("border", "2px solid #fff")
            }
        })
    </script>

    <script type="text/javascript">
        var links = document.getElementsByTagName("a");
        for (var i = 0, l = links.length; i < l; i++) {
            links[i].setAttribute("hideFocus", true);
        }
    </script>
</body>
</html>
